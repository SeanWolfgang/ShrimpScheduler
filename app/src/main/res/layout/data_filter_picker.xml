<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/activity_horizontal_margin_small"
    >


    <TextView
        android:id="@+id/data_filter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_filter_label_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Spinner
        android:id="@+id/data_filter_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/data_filter_label"
        app:layout_constraintTop_toTopOf="@id/data_filter_label"
        app:layout_constraintBottom_toBottomOf="@id/data_filter_label"
        ></Spinner>

</androidx.constraintlayout.widget.ConstraintLayout>