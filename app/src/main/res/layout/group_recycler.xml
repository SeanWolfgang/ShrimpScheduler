<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/big_padding">

    <TextView
        android:id="@+id/group_name_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:paddingHorizontal="@dimen/big_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delete_group_button"
        ></TextView>


    <Button
        android:id="@+id/delete_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/holo_red_dark"
        android:text="@string/ballot_x"
        android:paddingHorizontal="@dimen/big_padding"
        app:layout_constraintTop_toTopOf="@id/group_name_recycler"
        app:layout_constraintBottom_toBottomOf="@id/group_name_recycler"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>