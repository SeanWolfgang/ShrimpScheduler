<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/big_padding">

    <TextView
        android:id="@+id/group_name_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:paddingHorizontal="@dimen/big_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/group_delete_button"
        ></TextView>


    <ImageButton
        android:id="@+id/group_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_icon"
        android:minWidth="@dimen/task_recycler_button_dim"
        android:minHeight="@dimen/task_recycler_button_dim"
        app:layout_constraintTop_toTopOf="@id/group_name_recycler"
        app:layout_constraintBottom_toBottomOf="@id/group_name_recycler"
        app:layout_constraintEnd_toStartOf="@id/group_delete_button"/>

    <ImageButton
        android:id="@+id/group_delete_button"
        android:src="@drawable/ic_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:minWidth="40dp"
        android:minHeight="40dp"
        app:layout_constraintTop_toTopOf="@id/group_name_recycler"
        app:layout_constraintBottom_toBottomOf="@id/group_name_recycler"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>