<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/activity_horizontal_margin_small"
    >

    <ImageButton
        android:id="@+id/task_date_picking_date_imagebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_datepicker_icon"
        />

    <TextView
        android:id="@+id/task_date_picking_date_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/task_date_picking_date_imagebutton"
        app:layout_constraintEnd_toEndOf="@+id/task_date_picking_switch_mode_button"
        app:layout_constraintTop_toTopOf="@+id/task_date_picking_date_imagebutton"
        app:layout_constraintBottom_toBottomOf="@+id/task_date_picking_date_imagebutton"
        />

    <ImageButton
        android:id="@+id/task_date_picking_switch_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/task_date_picking_new_button"
        android:src="@drawable/ic_edit_icon"
        />

    <ImageButton
        android:id="@+id/task_date_picking_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_new_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>